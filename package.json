{
  "name": "bootstrap_basics",
  "version": "1.0.0",
  "description": "A basic bootstrap setup",
  "main": "index.js",
  "scripts": {
    "dev": "npx serve src/",
    "build": "npm run build-css && npm run copy-assets",
    "build-css": "sass --style compressed assets/main.scss src/static/main.min.css",
    "copy-assets": "cp -r node_modules/bootstrap/dist/js src/static/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.2",
    "sass": "^1.68.0"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "serve": "^14.2.1"
  }
}
